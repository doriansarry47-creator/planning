{
  "extends": "./tsconfig.json",
  "include": ["api/**/*", "server/**/*.js", "shared/**/*"],
  "exclude": ["server/**/*.ts", "node_modules", "build", "dist", "client", "**/*.test.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "incremental": false,
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "declaration": false,
    "outDir": "./dist"
  }
}

