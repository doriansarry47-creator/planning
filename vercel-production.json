{
  "version": 2,
  "buildCommand": "npm run build:client",
  "outputDirectory": "public",
  "installCommand": "npm ci",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3.1.1"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/((?!api|assets|favicon.ico).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["fra1"]
}