{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../dist/api",
    "rootDir": "../",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "allowImportingTsExtensions": false,
    "baseUrl": "../",
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "../api/**/*",
    "../server/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../client",
    "../public",
    "../dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}