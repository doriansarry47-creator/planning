{
  "version": 2,
  "framework": "hono",
  "builds": [
    {
      "src": "src/index.tsx",
      "use": "@vercel/node@3.0.19",
      "config": {
        "includeFiles": ["dist/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.tsx"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}
